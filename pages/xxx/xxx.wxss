.background{
  width: 100%;
  height: 800px;
  margin: 0;
  padding: 0;
  background: #e84118;
}
.search-box{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  background: #2f3640;
  height: 40px;
  border-radius: 40px;
  padding: 10px;
}

.search-box:hover>.search-txt{
  width: 240px;
  padding: 0 6px;
}
.search-box:hover>.search-btn{
  background: white;
}

.search-btn{
  color: #e84118;
  float: right;
  height: 40px;
  width: 40px;
  border-radius: 50%;
  background:#2f3640;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: 0.4s;
}

.search-txt{
  border:none;
  background: none;
  padding: 0;
  outline: none;
  float: left;
  font-size: 16px;
  color: white;
  transition: 0.4s;
  line-height: 40px;
  width: 0px;
}